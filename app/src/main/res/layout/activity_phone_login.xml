<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    tools:context="com.jingna.artworkmall.page.LoginActivity">

    <RelativeLayout
        style="@style/rl_top_bar_white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back_white" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black_333333"
            android:textSize="31sp"
            android:text="账号密码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="25dp"
            android:textColor="#969696"
            android:textSize="17sp"
            android:text="欢迎开启之旅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_phone"
            android:inputType="number"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            android:hint="请输入手机号"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:id="@+id/edget_password"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:hint="请输入密码"
                android:textSize="18sp"
                android:textColor="@color/black_333333"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_register"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:textColor="#A02630"
                android:textSize="12sp"
                android:text="手机注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phone_pwd"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tv_register"
                android:layout_marginTop="14dp"
                android:textColor="#A02630"
                android:textSize="12sp"
                android:text="短信验证码登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/bg_a02630_24dp"
            android:textColor="@color/white_ffffff"
            android:textSize="17sp"
            android:text="登录"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="49dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#838281"
            android:textSize="11sp"
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#A02630"
            android:textSize="11sp"
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#838281"
            android:textSize="11sp"
            android:text="与"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#A02630"
            android:textSize="11sp"
            android:text="《隐私政策》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
